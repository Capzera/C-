
package com.rapidweb2.common.exception;

import java.sql.SQLException;

/**
 * 自定义的异常处理类
 */
public class CommonException extends Exception
{
	private static final long serialVersionUID = 1L;

	/* 错误编码 */
	private int errorCode = -1;

	public int getErrorCode()
	{
		return errorCode;
	}

	public void setErrorCode(int errorCode)
	{
		this.errorCode = errorCode;
	}

	public static void rethrow(String msg) throws CommonException
	{
		throw new CommonException(msg);
	}

	public static void rethrow(String msg, Throwable cause) throws CommonException
	{
		throw new CommonException(msg, cause);
	}

	public static void rethrow(int code) throws CommonException
	{
		throw new CommonException(code);
	}

	public static void rethrow(Exception e) throws CommonException
	{
		throw new CommonException(e);
	}

	public CommonException()
	{
		super("系统发生了未知的错误！请联系管理员。");
	}

	public CommonException(String msg)
	{
		super(msg);
	}

	public CommonException(SQLException e)
	{
		super(e);
	}

	public CommonException(Exception e)
	{
		super(e);
	}

	public CommonException(String msg, Throwable cause)
	{
		super(msg, cause);
	}

	public CommonException(int code)
	{
		super("系统错误，代码为：" + code);
		this.errorCode = code;
	}
}
