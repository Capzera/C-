package com.rapidweb2.common.util;

import java.util.ArrayList;
import java.util.Enumeration;
import java.util.List;


/**
 * @author chis
 * 
 */
public class ArrayUtil {
	/**
	 * 将字节数组转换为用分割符号分割的十六进制数组，例如MAC地址的显示方式
	 * @param bytes
	 * @param split
	 * @return
	 */
	public static String bytes2HexString(byte[] bytes,String split) {
		if (bytes == null || bytes.length < 6) return null;
		StringBuilder sb = new StringBuilder();
		for (byte b : bytes) {
			if (sb.length() > 0) sb.append(split);
			sb.append(Integer.toHexString((b & 240) >> 4));
			sb.append(Integer.toHexString((b & 15)));
		}
		return sb.toString();
	}
	/**
	 * 转换
	 * @param <T>
	 * @param e
	 * @return
	 */
	public static <T> List<T> of( Enumeration<T> e ){
		List<T> list = new ArrayList<T>();
		while(e.hasMoreElements())	list.add( e.nextElement() );
		return list;
	}
}
