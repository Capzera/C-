package com.rapidweb2.common.util;


/**
 * 异常处理控制类
 * @author chis
 *
 */
public class ExceptionUtil {
	
	/**
	 * 获得所有的异常控制类信息的HTML字符串
	 * @param e
	 * @return
	 */
	public static String getAllTraceMessage(Throwable e)
	{
		StringBuffer r = new StringBuffer();
		r.append(e).append("<br>");
		StackTraceElement[] trace = e.getStackTrace();
		for(int i = 0; i < trace.length; i++)
			r.append(" at ").append(trace[i]).append("<br>");

		Throwable ourCause = e.getCause();
		if (ourCause != null) r.append(getAllTraceMessage(ourCause));

		return r.toString();
	}
}
