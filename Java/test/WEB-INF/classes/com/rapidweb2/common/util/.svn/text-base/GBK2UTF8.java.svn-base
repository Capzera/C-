package com.rapidweb2.common.util;

import java.io.File;
import java.io.IOException;
import java.nio.charset.Charset;

import com.google.common.io.Files;


/**
 * 文件编码格式转化
 * @author chis(chis123@qq.com)
 *
 */
public class GBK2UTF8 {
	
	public static void gbk2utf8(String path) {
		FilesUtil.stepPaths(new FilesUtil.IFilePicker() {
			@Override
			public void pick(File file) {
				if(!file.getName().endsWith(".java")) return ;
					try {
						String buf = Files.toString(file,Charset.forName("GBK") );
						Files.write(buf, file,  Charset.forName("UTF-8"));
					} catch (IOException e) {
						e.printStackTrace();
					}
				}
		}, path);
	}
	
	/**
	 * @param args
	 */
	public static void main(String[] args) {
		gbk2utf8("D:\\HTY_WORK_SXINFO\\10.workspace\\RapidWeb2.sxinfo\\src\\sns\\com\\sxinfo\\sns\\web\\filter");
	}

}
