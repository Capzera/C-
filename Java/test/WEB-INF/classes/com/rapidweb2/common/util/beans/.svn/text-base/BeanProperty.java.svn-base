package com.rapidweb2.common.util.beans;

import java.lang.reflect.Method;

/**
 * Bean属性定义
 * @author chis
 * 
 */
public class BeanProperty {
	private String		name;	// 属性名称
	private Method		getter;	// 属性的GETTER函数
	private Method		setter; // 属性的SETTER函数
	private Class<?>	type;	// Bean的数据类型

	public boolean isValid() {
		return !(this.getter == null || this.setter == null || this.name == null || this.type == null);
	}

	public Class<?> getType() {
		return type;
	}

	public void setType(Class<?> type) {
		this.type = type;
	}

	public Method getGetter() {
		return getter;
	}

	public void setGetter(Method getter) {
		this.getter = getter;
	}

	public String getName() {
		return name;
	}

	public void setName(String name) {
		this.name = name;
	}

	public Method getSetter() {
		return setter;
	}

	public void setSetter(Method setter) {
		this.setter = setter;
	}

}
