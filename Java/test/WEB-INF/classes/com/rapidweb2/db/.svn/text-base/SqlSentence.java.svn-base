package com.rapidweb2.db;

/**
 * SQL指令
 * 
 * @author chis(chis123@qq.com)
 */
public class SqlSentence {
	private String		sql;
	private Object[]	arguments;

	/**
	 * @param 将值sql 设置为属性sql
	 */
	public void setSql(String sql) {
		this.sql = sql;
	}

	/**
	 * @param 将值arguments 设置为属性arguments
	 */
	public void setArguments(Object[] arguments) {
		this.arguments = arguments;
	}

	/**
	 * 生产一个新的SQL语句实例
	 * 
	 * @param <T>
	 * @param beanType
	 * @param sql
	 * @param args
	 * @return
	 */
	public static SqlSentence of(String sql, Object... args) {
		SqlSentence so = new SqlSentence();
		so.sql = sql;
		so.arguments = args;
		return so;
	}
	
	/**
	 * @return 返回属性 sql
	 */
	public String getSql() {
		return sql;
	}

	/**
	 * @return 返回属性 arguments
	 */
	public Object[] getArguments() {
		return arguments;
	}

}
